<div class="container" style="margin-top: 5em;">
<div class="row bg-dark p-3 mt-4 mb-4">
<h1>Articles</h1>
<h6 class="text-primary"><%= Article.public_count %> articles in the database and counting!</h6>
</div>
<%
=begin%>
 <div class="row">
      <div class="col-12 bg-dark p-4 mb-4 d-flex">
        <%= form_tag(articles_path, :method => "get", id: "search-form", class: 'form-group form-control d-flex flex-row bg-dark no-border justify-content-center') do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Articles ..", class: 'form-control w-25' %>
          <%= submit_tag "Search", class: 'btn btn-primary btn-sm ms-2 ps-5 pe-5' %>
        <% end %>
      </div>
</div> 
<%
=end%>
<div class="row row-cols-1 row-cols-md-2 g-4">

<% @articles.each do |article| %>
  <% unless article.archived? %>

  <div class="col-4">
    
    <div class="card bg-dark h-100">
      <img src="https://via.placeholder.com/300x150/000000" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
        <p class="card-text"><%= article.description %></p>
      </div>
      <div class="card-footer">
        <span class="d-flex flex-row-reverse">
        <% if user_signed_in? %>
          <%= link_to "Like", article_path(article), class: 'btn btn-danger btn-sm' %>&ensp;
          <%= link_to "Save", article_path(article), class: 'btn btn-success btn-sm'  %>&ensp;
        <% end %>
          <%= link_to "Show", article_path(article), class: 'btn btn-primary btn-sm'  %>
        </span>
        <div class="d-flex">
            <small class="d-flex flex-row text-warning"><%= article.comments.count %> Comment(s)</small>&emsp;
            <small class="d-flex flex-row text-danger"><%= article.likes.count %> Like(s)</small>
        </div>
      </div>
    </div>

  </div>

  <% end %>
  <% end %>

</div>
</div>

