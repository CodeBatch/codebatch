<h2 style="width:350px;display:flex;flex-wrap:nowrap;justify-content:center;margin:auto;">CodeBatch</h2><br>
<h3 style="width:350px;display:flex;flex-wrap:nowrap;justify-content:center;margin:auto;">Log in</h3>

<br>

<div class="p-3">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field row mb-3">
    <%= f.label :email, class: 'form-label' %><br />
    <div class="col-sm-12">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  </div>

  <div class="field row mb-3">
    <%= f.label :password, class: 'form-label' %><br />
    <div class="col-sm-12">
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Keep Me Signed In (Not recommend)", class: 'form-label' %>
    </div>
  <% end %>

  <div class="actions d-grid gap-2">
    <%= f.submit "Log in", class: 'btn btn-primary'  %>
  </div>
<% end %>
</div>

