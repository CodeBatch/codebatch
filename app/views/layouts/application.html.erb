<!DOCTYPE html>
<html>
  <head>
    <title>CodeBatch</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <% if cookies[:moon] %>
    <%= stylesheet_link_tag 'application_dark', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% else %>
    <%= stylesheet_link_tag 'application_light', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="header">
      <%= render 'shared/nav' %>
    </div>

    <div class="wrapper">

      <%= toastr_flash %>
    
      <%= yield %>
      <div class="push"></div>
    </div>
    
    <div class="footer">
      <%= render 'shared/footer' %>
    </div>

  </body>
</html>
